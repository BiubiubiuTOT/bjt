<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_color"
    android:orientation="vertical"
    tools:context="com.bangjiat.bjt.module.secretary.communication.ui.WriteEmailActivity">

    <include layout="@layout/toolbar_3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人："
            android:textColor="@color/personal_message"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="十多个还是"
            android:textColor="@color/dialog_title"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/add_car" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发件人："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_send_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="www.DavidLee@qq.com"
            android:textColor="@color/personal_message"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:text="主题："
        android:textColor="@color/personal_message"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation=""
        android:layout_height="200dp">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@null"
            android:text="今天中午一起吃个饭"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="23dp"
                android:src="@mipmap/email_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:gravity="bottom"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:paddingLeft="29dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:src="@mipmap/add_photo" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
