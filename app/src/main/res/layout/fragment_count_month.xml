<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="迟到"
                    android:textColor="@color/dialog_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_late"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/iv1"
                    android:text="2人"
                    android:textColor="@color/personal_message"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/down" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/personal_view" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_late"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早退"
                    android:textColor="@color/dialog_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/iv2"
                    android:text="2人"
                    android:textColor="@color/personal_message"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/down" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旷工"
                    android:textColor="@color/dialog_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_absence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/iv3"
                    android:text="0人"
                    android:textColor="@color/personal_message"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/down" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/personal_view" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_absence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外勤"
                    android:textColor="@color/dialog_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/iv4"
                    android:text="2人"
                    android:textColor="@color/personal_message"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/down" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


        </LinearLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/iv_excel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="70dp"
        android:src="@mipmap/excel" />
</LinearLayout>