<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_gallery_pick_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".common.PickActivity">

    <include layout="@layout/toolbar_3" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGalleryImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gallery_white" />

    <TextView
        android:id="@+id/tv_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/add_photo"
        android:textColor="@color/mine_bg"
        android:textSize="15sp" />
</LinearLayout>